@using TBJ.Ecommerce.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="icon" href="~/Content/Images/TBJ.png" sizes="32x32">
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href='@Url.Action("Index", "Home")' class="navbar-brand">

                    <div class="tbj-logo"></div>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href='@Url.Action("Index", "Home")'> <i class="fa fa-home"></i> Home</a></li>
                </ul>
                <ul class="nav navbar-nav">
                    <li><a href='@Url.Action("Index", "About")'> <i class='fa fa-info-circle'> </i> About</a></li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Our Products", "Index", "Products")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li><a href='@Url.Action("Index", "Contact")'> <i class="fa fa-phone"></i> Contact <i class="fa fa-envelope"></i></a></li>
                </ul>
                @if (Session["UserID"] == null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href='@Url.Action("Index", "Login")'> <i class='fa fa-user'></i> Login/Register</a></li>
                    </ul>
                }
                else
                {

                    <ul class="nav navbar-nav navbar-right">

                        <li><a href='@Url.Action("Logout", "Login")'><i class='fa fa-sign-out'></i> Logout</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li> <a href='#'>Hello, @Session["UserName"] </a></li>
                    </ul>
                   
                }


            </div>
        </div>

    </div>
    <section>
        <a class="backtotop" href="#"><i class=" fa fa-arrow-up"> </i></a> 
    </section>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="handwriting" style="color:white">&copy; TBJ Electronics @DateTime.Now.Year All Rights Reserved.</p>
            <p class="handwriting" style="color:white; float:right">
                <a href="#">Terms & Conditions </a>
                <a href="#">| Privacy Policy </a>
                <a href="#"> | Security Policy</a>

            </p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
