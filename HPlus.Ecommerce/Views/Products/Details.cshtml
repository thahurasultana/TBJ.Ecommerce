@model TBJ.Ecommerce.Models.Product

@{
    ViewBag.Title = "Tbjelectronics.co.uk || Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<body style="background-image:url(/Content/Images/productsB.jpg)">
    <center>
        <h1 class="tbj-heading">Product Details</h1>
        
        <div class="col-md-4 col-sm-6" style="float:unset">
            <div class="product-grid">
                <div class="product-image">
                    <a href="@Url.Content(@Model.ProductImage)">
                        <img src="@Url.Content(@Model.ProductImage)" style="width:100%; height:100%" />
                    </a>
                    <ul class="social">
                        <li><a href="" data-tip="Add to Wishlist"><i class="fa fa-shopping-bag"></i></a></li>
                        <li><a href='@Url.Action("AddToCart", "ShoppingCart", new {id=@Model.ProductId})' data-tip="Add To Cart"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                    <span class="product-new-label">Sale</span>
                    <span class="product-discount-label">@Html.DisplayFor(modelItem => @Model.Discount)%</span>
                </div>
                <ul class="rating">
                    @for (var i = 1; i <= @Model.StarRating; i++)
                    {
                        <li class="fa fa-star"></li>
                    }
                    @for (var i = @Model.StarRating; i < 5; i++)
                    {
                        <li class="fa fa-star disable"></li>
                    }
                </ul>
                <div class="product-content">
                    <h3 class="title"><a href="@Url.Content(@Model.ProductImage)">@Html.DisplayFor(modelItem => @Model.ProductName)</a></h3>
                    <div class="price">
                        £@Html.DisplayFor(modelItem => @Model.CurrentPrice)
                        <span>£@Html.DisplayFor(modelItem => @Model.FullPrice)</span>
                    </div>
                </div>
            </div>
                <div >
                   <a href='@Url.Action("Index", "Products")' class="btn btn-primary btn-lg btn-block" role="button" style="font-family:Calibri">Back to Products</a>
                </div>


        </div>
    </center>
</body>
    </html>
